@model IEnumerable<DemoASM.Models.Book>

@{
    ViewData["Title"] = "Book Management";
}

<h1>Book Management</h1>

<p>
    <a asp-action="Create">Create New book</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pages) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description) 
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.ImgUrl) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store) 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pages)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.ImgUrl)*@
                 @if   (item.ImgUrl.StartsWith("https://"))									
					{
						<img  src="@(item.ImgUrl)" asp-append-version="true" width="350px" height="260px">
					}
					else
					{
						<img  src="@("~/image/" + item.ImgUrl)" asp-append-version="true" width="250px" height="250px">
					}
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store.StoreId)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-success"  asp-route-id="@item.Isbn">Edit</a> 
                <a asp-action="Details"class="btn btn-info" asp-route-id="@item.Isbn">Details</a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Isbn">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
