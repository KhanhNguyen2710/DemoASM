@model IEnumerable<DemoASM.Models.Cart>

@{
    ViewData["Title"] = "Index";
}

<h2>Cart</h2>

<p>
    <a asp-controller="Books" asp-action="Index">Buy Now</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th> Title </th>
            <th> Price </th>
            <th>
                Total
            </th>
            <th>Quantity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IsbnNavigation.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsbnNavigation.Price)
                </td>
              
                <td>
                    <a asp-controller="Carts" asp-action="Delete" asp-route-BookIsbn="@item.Isbn">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>
<p class="text-align-right">Total bill: @ViewBag.totalPrice</p>
<a asp-controller="Carts" asp-action="Checkout">Checkout</a>
